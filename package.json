{
  "name": "iam-a-messenger",
  "version": "1.5.0",
  "description": "Simple user/guest messaging interface.",
  "main": "index.js",
  "repository": "git@github.com:afriedrichsen/iam-a-messenger.git",
  "author": "Alex Friedrichsen <afriedrichsen@me.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "precommit": "yarn lint",
    "prestart": "yarn docs",
    "start": "cross-env NODE_ENV=production pm2 start ./src/index.js",
    "dev:server": "nodemon ./app/server/index.js",
    "lint": "eslint **/*.js --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive app/server/tests",
    "test:unit": "cross-env NODE_ENV=test mocha app/server/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 app/server/tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch app/server/tests/unit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "validate": "npm run lint && npm run test",
    "postpublish": "git push --tags",
    "deploy": "sh ./deploy.sh",
    "docs": "apidoc -i app/server -o app/server/docs",
    "postdocs": "opn app/server/docs/index.html",
    "build:client": "cd app/client && yarn build",
    "build:watch": "babel ./app/client -d build/client --watch",
    "build:client:watch": "webpack --mode development --watch",
    "build:prod": "npm run build && npm run build:client",
    "start:full": "npm run build:prod && NODE_ENV=production node ./build/server/index.js",
    "start:dev:full": "NODE_ENV=development concurrently --kill-others \"npm run build:client:watch\" \"nodemon ./app/server/index.js\" \"webpack-dev-server\""
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcryptjs": "2.4.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.18.2",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "cross-env": "^5.0.1",
    "dotenv-safe": "^5.0.1",
    "express": "^4.16.3",
    "express-fileupload": "^0.4.0",
    "express-validation": "^1.0.2",
    "file-loader": "0.11.2",
    "fs-extra": "3.0.1",
    "helmet": "^3.5.0",
    "history": "^4.7.2",
    "http-status": "^1.0.1",
    "joi": "^13.2.0",
    "jquery": "^3.3.1",
    "jwt-simple": "0.5.1",
    "lodash": "^4.17.4",
    "method-override": "^2.3.8",
    "moment": "^2.22.1",
    "moment-timezone": "^0.5.13",
    "mongoose": "^5.0.17",
    "morgan": "^1.8.1",
    "object-assign": "^4.1.1",
    "pm2": "^2.4.6",
    "promise": "8.0.1",
    "raf": "^3.4.0",
    "resolve": "^1.7.1",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "autoprefixer": "^8.4.1",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "chalk": "^2.4.1",
    "concurrently": "^3.5.1",
    "coveralls": "^3.0.0",
    "eslint": "4.10.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-loader": "1.9.0",
    "eslint-plugin-flowtype": "2.35.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "husky": "^0.14.3",
    "jest": "^22.4.3",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.3",
    "opn-cli": "^3.1.0",
    "sinon": "^4.0.1",
    "sinon-chai": "^3.0.0",
    "supertest": "^3.0.0",
    "whatwg-fetch": "2.0.3"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "proxy": "http://localhost:2112"
}
